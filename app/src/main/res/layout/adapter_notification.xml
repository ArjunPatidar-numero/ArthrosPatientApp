<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="NotificationListAdapter"
            type="com.numeroeins.arthros.patient.adapter.NotificationListAdapter" />
    </data>

    <LinearLayout
        android:id="@+id/parentViewCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/height_10dp"
        android:background="@drawable/custom_appointment_row"
        android:orientation="vertical"
        android:padding="@dimen/margin_15dp">

        <TextView
            android:id="@+id/notNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start|center"
            android:maxLines="1"
            android:text="Yuri Zhivago"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/margin_16dp" />

        <TextView
            android:id="@+id/notMessageTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start|center"
            android:text="sdffsjdfkjdfgkjgfdjgkfjdghkfjdhgjfjdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdgfdg"
            android:textColor="@color/color_edit_box_text"
            android:textSize="@dimen/text_size_14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center"
                android:maxLines="1"
                android:text="01 Jan 2021"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14dp" />

            <TextView
                android:id="@+id/notTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center"
                android:maxLines="1"
                android:text="12:55 PM"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14dp" />

        </LinearLayout>

    </LinearLayout>
</layout>