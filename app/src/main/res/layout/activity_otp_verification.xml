<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="otpVerificationActivity"
            type="com.numeroeins.arthros.patient.activity.OtpVerificationActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/back_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Verification"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_13dp" />
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <LinearLayout
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/arthros_logo"   />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:text="@string/enter_otp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_18dp"
                    tools:ignore="AllCaps,SpUsage" />

                <TextView
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="@string/we_have_sent_you_a_verification_code_otp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_12dp"
                    android:fontFamily="@font/poppins_regular"
                    tools:ignore="AllCaps,SpUsage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_25dp"
                    android:orientation="horizontal">
                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor_black"
                        android:id="@+id/pinOneEdt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52.2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_edit_box_pin"
                        android:gravity="center"
                        android:maxLength="1"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:layout_marginHorizontal="2.5dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/color_edit_box_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <EditText  android:textCursorDrawable="@drawable/color_cursor_black"
                        android:id="@+id/pinTwoEdt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52.2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_edit_box_pin"
                        android:gravity="center"
                        android:maxLength="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/color_edit_box_text"
                        android:inputType="number"
                        android:layout_marginHorizontal="2.5dp"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor_black"
                        android:id="@+id/pinThreeEdt"
                        android:layout_height="49.8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_edit_box_pin"
                        android:gravity="center"
                        android:maxLength="1"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/color_edit_box_text"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:layout_marginHorizontal="2.5dp"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor_black"
                        android:id="@+id/pinFourEdt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52.2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_edit_box_pin"
                        android:gravity="center"
                        android:maxLength="1"
                        android:imeOptions="actionNext"
                        android:layout_marginHorizontal="2.5dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/color_edit_box_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor_black"
                        android:id="@+id/pinFiveEdt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52.2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_edit_box_pin"
                        android:gravity="center"
                        android:maxLength="1"
                        android:layout_marginHorizontal="2.5dp"
                        android:imeOptions="actionNext"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/color_edit_box_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor_black"
                        android:id="@+id/pinSixEdt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52.2dp"
                        android:background="@drawable/custom_edit_box_pin"
                        android:gravity="center"
                        android:maxLength="1"
                        android:layout_marginHorizontal="2.5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/color_edit_box_text"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                </LinearLayout>
                <TextView
                    android:id="@+id/verificationTxt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/custom_red_button"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/verify_and_proceed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_18dp"
                    tools:ignore="AllCaps,SpUsage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/didn_t_receive_otp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/margin_14dp"
                        android:fontFamily="@font/poppins_regular"
                        tools:ignore="AllCaps,SpUsage" />

                    <TextView
                        android:id="@+id/resendTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/resend"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="@dimen/margin_16dp"
                        android:fontFamily="@font/poppins_semibold"
                        tools:ignore="AllCaps,SpUsage" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_height="@dimen/height_45dp">

                    <TextView
                        android:id="@+id/facebookTxt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_facebook_btn"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="@string/facebook"
                        android:textColor="@color/white"
                        android:textSize="@dimen/margin_18dp"
                        tools:ignore="AllCaps,SpUsage" />

                    <TextView
                        android:id="@+id/googleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_google_btn"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="@string/google"
                        android:textColor="@color/white"
                        android:textSize="@dimen/margin_18dp"
                        tools:ignore="AllCaps,SpUsage" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>