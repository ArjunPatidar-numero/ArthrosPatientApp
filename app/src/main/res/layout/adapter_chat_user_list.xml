<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ChatAdapter"
            type="com.numeroeins.arthros.patient.adapter.ChatUserListAdapter" />
    </data>

    <LinearLayout
        android:id="@+id/parentViewCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:background="@drawable/custom_card_border_semi_round"
        android:padding="@dimen/margin_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/height_5dp"
            android:paddingVertical="@dimen/margin_8dp">


            <ImageView
                android:id="@+id/jobImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:src="@drawable/user_dummy_profile_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/yardNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_22dp" />


                <TextView
                    android:id="@+id/locationTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14dp" />


            </LinearLayout>


        </LinearLayout>

  <!--      <View
            android:layout_width="match_parent"
            android:background="@color/grey_live"
            android:layout_marginVertical="10dp"
            android:layout_height=".1dp"/>-->
    </LinearLayout>


</layout>