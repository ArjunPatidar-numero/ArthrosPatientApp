<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/custom_top_curve_bg"
    android:orientation="vertical"
    app:behavior_peekHeight="400dp">

    <LinearLayout
        android:id="@+id/childListParentRelLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/height_60dp"
            android:layout_height="@dimen/height_60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:src="@drawable/thumb_up_icon"/>

        <TextView
            android:id="@+id/dialogMainTitleTv"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/thank_you"
            android:textColor="@color/color_FC2727"
            android:textAlignment="center"
            android:textSize="@dimen/margin_16dp" />

        <TextView
            android:id="@+id/dialogTitleMsgTv"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Your Appointment Created."
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="@dimen/margin_14dp" />

        <TextView
            android:layout_marginTop="@dimen/margin_10dp"
            android:id="@+id/dialogMsgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You booked an appointment with Dr. Gustav Purpleson on March 20, 11:00 PM"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14dp" />


        <RelativeLayout
            android:id="@+id/doneDialogRelLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:layout_marginTop="@dimen/text_size_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:background="@drawable/custom_red_button"
            android:paddingVertical="@dimen/margin_10dp">

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14dp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>